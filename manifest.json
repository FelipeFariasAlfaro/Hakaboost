{
  "manifest_version": 3,
  "name": "HakaBoost",
  "version": "1.0.1",
  "description": "Accelerate your testing and quality work in Jira with HakaBoost",
  "icons": {
    "16": "img/16x16.png",
    "48": "img/48x48.png",
    "128": "img/128x128.png"
  },
  "permissions": [
    "storage",
    "sidePanel",
    "scripting",
    "activeTab",
    "tabs",
    "downloads"
  ],
  "host_permissions": [
    "https://*.atlassian.net/*",
    "https://*.jira.com/*",
    "https://api.openai.com/*",
    "https://xray.cloud.getxray.app/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open HakaBoost",
    "default_popup": "nojira.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.atlassian.net/*",
        "https://*.jira.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "toggle-sidepanel": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Show/Hidden HakaBoost"
    }
  }
}