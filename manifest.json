{
  "manifest_version": 3,
  "name": "HakaBoot",
  "version": "0.2.5",
  "description": "Hakalab plugin to optimize work in Jira.",
  "icons": {
    "16": "img/32.png",
    "48": "img/64.png",
    "128": "img/128.png"
  },
  "permissions": [
    "storage",
    "sidePanel",
    "scripting",
    "activeTab",
    "webNavigation",
    "tabs",
    "downloads"
  ],
  "host_permissions": [
    "https://*.atlassian.net/*",
    "https://*.jira.com/*",
    "https://api.openai.com/*",
    "https://xray.cloud.getxray.app/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open Hakaboot",
    "default_popup": "nojira.html",
    "default_icon": {
      "16": "img/32.png",
      "48": "img/64.png",
      "128": "img/128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.atlassian.net/*",
        "https://*.jira.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "toggle-sidepanel": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Mostrar/ocultar TestHunt"
    }
  }
}